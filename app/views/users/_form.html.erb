<div class="section-body">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-6">
                <div class="card">
<%= form_for(user, html: {class: 'needs-validation new_user', novalidate: '' }) do |f| %>
<div class="card-header">
                      <h4>Datos del usuario</h4>
                    </div>
                    <div class="card-body">
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
    <%= f.text_field :email, class: "form-control" %>
    <div class="invalid-feedback">
      What's your name?
    </div>
  </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :password, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
    <%= f.text_field :password, class: "form-control" %>
    <div class="invalid-feedback">
      What's your name?
    </div>
  </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
    <%= f.text_field :password_confirmation, class: "form-control" %>
    <div class="invalid-feedback">
      What's your name?
    </div>
  </div>
  </div>
  
  <%= collection_select(
  :user, :role_id, Role.all, :id, :name, { prompt: true }
) %>

  
 
  
</div>
<div class="actions card-footer text-right">
    <%= f.submit "Guardar usuario", class:"btn btn-primary" %>
  </div>
  <% end %>
</div>
</div>
</div>
</div>
</div>